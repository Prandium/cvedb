% english babel
\def\fidius@babel@option{ngerman}
\DeclareOption{english}{\gdef\fidius@babel@option{english}}

% unknown options
\DeclareOption*{\PackageWarning{FIDIUS Common}{Unknown `\CurrentOption`}}
\ProcessOptions\relax

% common packages
\RequirePackage[\fidius@babel@option]{babel}
\RequirePackage[utf8]{inputenc}
\RequirePackage{amsmath,amsfonts,amssymb,textcomp,calc,graphicx,booktabs}
