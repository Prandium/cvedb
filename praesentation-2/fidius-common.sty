% presentation environment
\newif\iffidiuspresentation \fidiuspresentationfalse
\DeclareOption{presentation}{\fidiuspresentationtrue}

% article environment
\newif\iffidiusarticle \fidiusarticlefalse
\DeclareOption{article}{\fidiusarticletrue}

% letter environment
\newif\iffidiusletter \fidiusletterfalse
