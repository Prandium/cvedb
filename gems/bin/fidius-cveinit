#!/usr/bin/env ruby
# encoding: utf-8
$KCODE = 'u' if RUBY_VERSION < '1.9'

require 'fileutils'

DEST_DIR = File.join(Dir.pwd, 'app', 'models')
GEM_DIR  = File.join(File.expand_path(File.dirname(__FILE__)), '..')
VERSION  = File.read(File.join(GEM_DIR, 'VERSION')).strip

FileUtils.cp_r(Dir.glob(File.join(GEM_DIR, 'models', '*.rb')), DEST_DIR)
